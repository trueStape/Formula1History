{
  "SwaggerOptions": {
    "JsonRoute": "swagger/{documentName}/swagger.json",
    "Description": "Our Api",
    "UiEndpoint": "v1/swagger.json"
  },
  "ConnectionString": {
    "Formula1History": "Server=DESKTOP-I56L910;Database=Formula1History;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "W:\\Repositories\\Formula1History\\Formula1History\\Logs\\log.txt" },
        "outputTemplate": "{Timestamp:G} {Message}{NewLine:1}{Exception:1}"
      },
      {
        "Name": "File",
        "Args": {
          "path": "W:\\Repositories\\Formula1History\\Formula1History\\Logs\\log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "Sample"
    }
  }
}
